---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
const metaDescription =
  "obmain.co - ¿Tienes preguntas o quieres hablar sobre un proyecto? Contáctanos y diseñemos la solución perfecta con nuestras herramientas y servicios..";
const ogTitle = "Contacta con nosotros | obmain ingeniería";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://obmain.co/contact",
    url: "https://obmain.co/contact",
    name: "Contacta con nosotros | obmain ingeniería",
    description:
      "¿Tienes preguntas o quieres hablar sobre un proyecto? Contáctanos y diseñemos la solución perfecta con nuestras herramientas y servicios..",
    isPartOf: {
      "@type": "WebSite",
      url: "https://obmain.co",
      name: "obmain ingeniería",
      description:
        "obmain ingeniería es una empresa especializada en construcción, mantenimiento eléctrico, mecánico y civil en Tolima. Soluciones confiables, seguras y de calidad.",
    },
    inLanguage: "es-CO",
  }}
>
  <ContactSection />
</MainLayout>
